{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "typeRoots": ["./types", "node_modules/@types"],
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "assets/*": [
        "assets/*"
      ],
    }
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
}